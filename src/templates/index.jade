include header.jade
body
	a(href="https://github.com/juicyarts/juicyslider/")
		img(style="position: absolute; top: 0; right: 0; border: 0; z-index: 5000", src="https://camo.githubusercontent.com/52760788cde945287fbb584134c4cbc2bc36f904/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f77686974655f6666666666662e706e67", alt="Fork me on GitHub", data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_white_ffffff.png")
	#pagewrapper
		h1 Sliding Doors
		article.
			Sliding Doors is a small vanilla plugin to let you build simple sliding panels
			Check out the examples and feel free to contribute.
		#contentwrapper
			.block
				h2 The One Way Ticket
				h3 Just forth and back, no replay, no carousel
				
				#slider1Container(class="sliderContainer")
					#slider1Prev(class="jArrowPrev")
					.jSlideWrapper
						ul
							li 1
							li 2
							li 3
							li 4
					#slider1Next(class="jArrowNext")
				pre
					span javascript 
					code(class="javascript").
						var slider = new hsSlider({
						 el: 'containerName',
						 direction: 'horizontal'
						}).init();

						// or
						var slider = new hsSlider({
						 el: 'containerName',
						 direction: 'vertical'
						}).init();
				pre(rel="HTML")
					span html
					code(class="xml").
						&lt;div id="containerName"&gt;
						 &lt;div class="jArrowPrev"&gt;&lt;/div&gt;
						 &lt;div class="jSlideWrapper"&gt;
						  &lt;ul&gt;
						   &lt;li&gt;&lt;/li&gt;
						   &lt;li&gt;&lt;/li&gt;
						   &lt;li&gt;&lt;/li&gt;
						  &lt;/ul&gt;
						 &lt;/div&gt;
						 &lt;div class="jArrowNext"&gt;&lt;/div&gt;
						&lt;/div&gt;
						
	include scripts.jade